{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules",
    "lib", "**/__tests__/**"]
}